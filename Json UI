<body>

    <h2>Controls & Tools</h2>
    <table>
        <thead>
            <tr>
                <th>Control</th>
                <th>Tools</th>
            </tr>
        </thead>
        <tbody id="tableBody"></tbody>
    </table>

    <!-- Modal for tool info -->
    <div id="toolModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2 id="modalTitle"></h2>
            <table class="info-table">
                <tr>
                    <td><div class="info-header">Important Links</div><div id="modalImportantLinks"></div></td>
                    <td><div class="info-header">Useful Links</div><div id="modalUsefulLinks"></div></td>
                    <td><div class="info-header">Version History</div><div id="modalVersionHistory"></div></td>
                </tr>
                <tr>
                    <td><div class="info-header">Disclaimers</div><div id="modalDisclaimers"></div></td>
                    <td><div class="info-header">Advantages</div><div id="modalAdvantages"></div></td>
                    <td><div class="info-header">Notes</div><div id="modalNotes"></div></td>
                </tr>
            </table>
        </div>
    </div>

    <script>
        const jsonData = {
            "tools": {
                "toolA": {
                    "name": "Tool A",
                    "icon": "https://via.placeholder.com/40",
                    "info": {
                        "importantLinks": [{ "text": "Docs", "url": "https://docs.example.com" }],
                        "usefulLinks": [{ "text": "Tutorial", "url": "https://tutorial.example.com" }],
                        "versionHistory": ["v1.0", "v1.1", "v2.0"],
                        "disclaimer": "Use this tool at your own risk.",
                        "advantages": ["Fast", "User-friendly"],
                        "notes": "This tool is best for beginners."
                    }
                },
                "toolB": {
                    "name": "Tool B",
                    "icon": "https://via.placeholder.com/40",
                    "info": {
                        "importantLinks": [{ "text": "API", "url": "https://api.example.com" }],
                        "usefulLinks": [{ "text": "Guide", "url": "https://guide.example.com" }],
                        "versionHistory": ["v2.1", "v2.2", "v3.0"],
                        "disclaimer": "Limited access for free users.",
                        "advantages": ["Customizable", "Scalable"],
                        "notes": "Recommended for advanced users."
                    }
                }
            },
            "controls": [
                {
                    "id": "control1",
                    "displayText": "Control 1",
                    "url": "https://example.com",
                    "tools": ["toolA", "toolB"]
                },
                {
                    "id": "control2",
                    "displayText": "Control 2",
                    "url": "https://example2.com",
                    "tools": ["toolA"]
                }
            ]
        };

        const tableBody = document.getElementById("tableBody");
        const modal = document.getElementById("toolModal");
        const modalTitle = document.getElementById("modalTitle");
        const modalImportantLinks = document.getElementById("modalImportantLinks");
        const modalUsefulLinks = document.getElementById("modalUsefulLinks");
        const modalVersionHistory = document.getElementById("modalVersionHistory");
        const modalDisclaimers = document.getElementById("modalDisclaimers");
        const modalAdvantages = document.getElementById("modalAdvantages");
        const modalNotes = document.getElementById("modalNotes");
        const closeModal = document.querySelector(".close");

        jsonData.controls.forEach(control => {
            const row = document.createElement("tr");

            // Control column
            const controlCell = document.createElement("td");
            controlCell.innerHTML = `<a href="${control.url}" target="_blank">${control.displayText}</a>`;
            row.appendChild(controlCell);

            // Tools column
            const toolsCell = document.createElement("td");
            const toolBox = document.createElement("div");
            toolBox.classList.add("tool_box");

            control.tools.forEach(toolId => {
                const tool = jsonData.tools[toolId];
                if (tool) {
                    const toolCard = document.createElement("div");
                    toolCard.classList.add("tool_card");
                    toolCard.dataset.toolId = toolId;

                    // Tool Image
                    const toolImg = document.createElement("img");
                    toolImg.src = tool.icon;
                    toolImg.alt = tool.name;
                    toolCard.appendChild(toolImg);

                    // Tool Name
                    const toolText = document.createElement("div");
                    toolText.classList.add("tool_card_text");
                    toolText.textContent = tool.name;
                    toolCard.appendChild(toolText);

                    toolCard.addEventListener("click", () => openModal(tool.name, tool.info));

                    toolBox.appendChild(toolCard);
                }
            });

            toolsCell.appendChild(toolBox);
            row.appendChild(toolsCell);
            tableBody.appendChild(row);
        });

        function openModal(title, info) {
            modalTitle.textContent = title;
            modalImportantLinks.innerHTML = info.importantLinks.map(link => `<p><a href="${link.url}" target="_blank">${link.text}</a></p>`).join("");
            modalUsefulLinks.innerHTML = info.usefulLinks.map(link => `<p><a href="${link.url}" target="_blank">${link.text}</a></p>`).join("");
            modalVersionHistory.innerHTML = info.versionHistory.join(", ");
            modalDisclaimers.textContent = info.disclaimer;
            modalAdvantages.innerHTML = info.advantages.join(", ");
            modalNotes.textContent = info.notes;
            modal.style.display = "flex";
        }

        closeModal.addEventListener("click", () => modal.style.display = "none");
    </script>
</body>
</html>
