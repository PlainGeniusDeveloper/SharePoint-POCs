<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Controls & Tools Table</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
            vertical-align: top;
        }

        th {
            background-color: #f4f4f4;
        }

        .tool_box {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }

        .tool_card {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 10px;
            border: 1px solid #ccc;
            cursor: pointer;
            background-color: #f9f9f9;
            width: 100px;
            text-align: center;
        }

        .tool_card img {
            width: 40px;
            height: 40px;
            margin-bottom: 5px;
        }

        .tool_card_text {
            font-size: 14px;
        }

        .tool_card:hover, .highlight {
            background-color: yellow;
        }

        /* Modal styling */
        .modal {
            display: none;
            position: fixed;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            background: white;
            padding: 20px;
            border-radius: 5px;
            width: 50%;
        }

        .close {
            float: right;
            cursor: pointer;
        }
    </style>
</head>
<body>

    <h2>Controls & Tools</h2>
    <table>
        <thead>
            <tr>
                <th>Control</th>
                <th>Tools</th>
            </tr>
        </thead>
        <tbody id="tableBody"></tbody>
    </table>

    <!-- Modal for tool info -->
    <div id="toolModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2 id="modalTitle"></h2>
            <div id="modalLinks"></div>
            <p id="modalDisclaimer"></p>
            <ul id="modalAdvantages"></ul>
        </div>
    </div>

    <script>
        const jsonData = {
            "tools": {
                "toolA": {
                    "name": "Tool A",
                    "icon": "https://via.placeholder.com/40",
                    "info": {
                        "importantLinks": [{ "text": "Docs", "url": "https://docs.example.com" }],
                        "disclaimer": "Use this tool at your own risk.",
                        "advantages": ["Fast", "User-friendly"]
                    }
                },
                "toolB": {
                    "name": "Tool B",
                    "icon": "https://via.placeholder.com/40",
                    "info": {
                        "importantLinks": [{ "text": "API", "url": "https://api.example.com" }],
                        "disclaimer": "Limited access for free users.",
                        "advantages": ["Customizable", "Scalable"]
                    }
                }
            },
            "controls": [
                {
                    "id": "control1",
                    "displayText": "Control 1",
                    "url": "https://example.com",
                    "tools": ["toolA", "toolB"]
                },
                {
                    "id": "control2",
                    "displayText": "Control 2",
                    "url": "https://example2.com",
                    "tools": ["toolA"]
                }
            ]
        };

        const tableBody = document.getElementById("tableBody");
        const modal = document.getElementById("toolModal");
        const modalTitle = document.getElementById("modalTitle");
        const modalLinks = document.getElementById("modalLinks");
        const modalDisclaimer = document.getElementById("modalDisclaimer");
        const modalAdvantages = document.getElementById("modalAdvantages");
        const closeModal = document.querySelector(".close");

        jsonData.controls.forEach(control => {
            const row = document.createElement("tr");

            // Control column
            const controlCell = document.createElement("td");
            controlCell.innerHTML = `<a href="${control.url}" target="_blank">${control.displayText}</a>`;
            row.appendChild(controlCell);

            // Tools column
            const toolsCell = document.createElement("td");
            const toolBox = document.createElement("div");
            toolBox.classList.add("tool_box");

            control.tools.forEach(toolId => {
                const tool = jsonData.tools[toolId];
                if (tool) {
                    const toolCard = document.createElement("div");
                    toolCard.classList.add("tool_card");
                    toolCard.dataset.toolId = toolId;

                    // Tool Image
                    const toolImg = document.createElement("img");
                    toolImg.src = tool.icon;
                    toolImg.alt = tool.name;
                    toolCard.appendChild(toolImg);

                    // Tool Name
                    const toolText = document.createElement("div");
                    toolText.classList.add("tool_card_text");
                    toolText.textContent = tool.name;
                    toolCard.appendChild(toolText);

                    // Hover effect to highlight similar tools
                    toolCard.addEventListener("mouseover", () => highlightTools(toolId, true));
                    toolCard.addEventListener("mouseout", () => highlightTools(toolId, false));

                    // Click to open modal
                    toolCard.addEventListener("click", () => openModal(tool.name, tool.info));

                    toolBox.appendChild(toolCard);
                }
            });

            toolsCell.appendChild(toolBox);
            row.appendChild(toolsCell);
            tableBody.appendChild(row);
        });

        function highlightTools(toolId, highlight) {
            document.querySelectorAll(`[data-tool-id="${toolId}"]`).forEach(el => {
                el.classList.toggle("highlight", highlight);
            });
        }

        function openModal(title, info) {
            modalTitle.textContent = title;
            modalLinks.innerHTML = "<h3>Important Links</h3>";
            if (info.importantLinks.length > 0) {
                info.importantLinks.forEach(link => {
                    modalLinks.innerHTML += `<p><a href="${link.url}" target="_blank">${link.text}</a></p>`;
                });
            } else {
                modalLinks.innerHTML += "<p>No links available.</p>";
            }
            modalDisclaimer.innerHTML = `<h3>Disclaimer</h3><p>${info.disclaimer}</p>`;
            modalAdvantages.innerHTML = "<h3>Advantages</h3>";
            info.advantages.forEach(adv => {
                modalAdvantages.innerHTML += `<li>${adv}</li>`;
            });
            modal.style.display = "flex";
        }

        closeModal.addEventListener("click", () => {
            modal.style.display = "none";
        });

        window.addEventListener("click", (event) => {
            if (event.target === modal) {
                modal.style.display = "none";
            }
        });
    </script>
</body>
</html>
