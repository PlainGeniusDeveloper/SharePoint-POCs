<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Controls & Tools Table</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #f4f4f4;
        }

        .tool {
            display: inline-block;
            margin: 5px;
            padding: 5px 10px;
            border: 1px solid #ccc;
            cursor: pointer;
            background-color: #f9f9f9;
        }

        .tool:hover, .highlight {
            background-color: yellow;
        }

        /* Modal styling */
        .modal {
            display: none;
            position: fixed;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            background: white;
            padding: 20px;
            border-radius: 5px;
            width: 50%;
        }

        .close {
            float: right;
            cursor: pointer;
        }
    </style>
</head>
<body>

    <h2>Controls & Tools</h2>
    <table>
        <thead>
            <tr>
                <th>Control</th>
                <th>Tools</th>
            </tr>
        </thead>
        <tbody id="tableBody"></tbody>
    </table>

    <!-- Modal for tool info -->
    <div id="toolModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2 id="modalTitle"></h2>
            <div id="modalLinks"></div>
            <p id="modalDisclaimer"></p>
            <ul id="modalAdvantages"></ul>
        </div>
    </div>

    <script>
        const jsonData = {
            "tools": {
                "toolA": {
                    "name": "Tool A",
                    "info": {
                        "importantLinks": [
                            { "text": "Documentation", "url": "https://docs.example.com" },
                            { "text": "Support", "url": "https://support.example.com" }
                        ],
                        "disclaimer": "Use this tool at your own risk.",
                        "advantages": ["Fast processing", "User-friendly", "Highly secure"]
                    }
                },
                "toolB": {
                    "name": "Tool B",
                    "info": {
                        "importantLinks": [
                            { "text": "API Reference", "url": "https://api.example.com" }
                        ],
                        "disclaimer": "Limited access for free users.",
                        "advantages": ["Customizable", "Scalable"]
                    }
                },
                "toolC": {
                    "name": "Tool C",
                    "info": {
                        "importantLinks": [],
                        "disclaimer": "Experimental feature.",
                        "advantages": ["Lightweight", "Fast setup"]
                    }
                },
                "toolD": {
                    "name": "Tool D",
                    "info": {
                        "importantLinks": [
                            { "text": "User Guide", "url": "https://userguide.example.com" }
                        ],
                        "disclaimer": "May require additional setup.",
                        "advantages": ["Easy integration", "High availability"]
                    }
                },
                "toolE": {
                    "name": "Tool E",
                    "info": {
                        "importantLinks": [
                            { "text": "Getting Started", "url": "https://start.example.com" }
                        ],
                        "disclaimer": "Only works on latest browsers.",
                        "advantages": ["Cross-platform", "Optimized for speed"]
                    }
                }
            },
            "controls": [
                {
                    "id": "control1",
                    "displayText": "Control 1",
                    "url": "https://example.com",
                    "tools": ["toolA", "toolB"]
                },
                {
                    "id": "control2",
                    "displayText": "Control 2",
                    "url": "https://example2.com",
                    "tools": ["toolA", "toolC", "toolD"]
                },
                {
                    "id": "control3",
                    "displayText": "Control 3",
                    "url": "https://example3.com",
                    "tools": ["toolB", "toolC", "toolE"]
                },
                {
                    "id": "control4",
                    "displayText": "Control 4",
                    "url": "https://example4.com",
                    "tools": ["toolD", "toolE"]
                }
            ]
        };

        const tableBody = document.getElementById("tableBody");
        const modal = document.getElementById("toolModal");
        const modalTitle = document.getElementById("modalTitle");
        const modalLinks = document.getElementById("modalLinks");
        const modalDisclaimer = document.getElementById("modalDisclaimer");
        const modalAdvantages = document.getElementById("modalAdvantages");
        const closeModal = document.querySelector(".close");

        // Load all controls and tools into table
        jsonData.controls.forEach(control => {
            const row = document.createElement("tr");

            // Control column
            const controlCell = document.createElement("td");
            controlCell.innerHTML = `<a href="${control.url}" target="_blank">${control.displayText}</a>`;
            row.appendChild(controlCell);

            // Tools column
            const toolsCell = document.createElement("td");

            control.tools.forEach(toolId => {
                const tool = jsonData.tools[toolId];
                if (tool) {
                    const toolDiv = document.createElement("div");
                    toolDiv.classList.add("tool");
                    toolDiv.textContent = tool.name;
                    toolDiv.dataset.toolId = toolId;

                    // Hover effect to highlight similar tools
                    toolDiv.addEventListener("mouseover", () => highlightTools(toolId, true));
                    toolDiv.addEventListener("mouseout", () => highlightTools(toolId, false));

                    // Click to open modal
                    toolDiv.addEventListener("click", () => openModal(tool.name, tool.info));

                    toolsCell.appendChild(toolDiv);
                }
            });

            row.appendChild(toolsCell);
            tableBody.appendChild(row);
        });

        // Highlight tools of the same type
        function highlightTools(toolId, highlight) {
            document.querySelectorAll(`[data-tool-id="${toolId}"]`).forEach(el => {
                el.classList.toggle("highlight", highlight);
            });
        }

        // Open modal with tool info
        function openModal(title, info) {
            modalTitle.textContent = title;

            // Populate Important Links
            modalLinks.innerHTML = "<h3>Important Links</h3>";
            if (info.importantLinks.length > 0) {
                info.importantLinks.forEach(link => {
                    modalLinks.innerHTML += `<p><a href="${link.url}" target="_blank">${link.text}</a></p>`;
                });
            } else {
                modalLinks.innerHTML += "<p>No links available.</p>";
            }

            // Populate Disclaimer
            modalDisclaimer.innerHTML = `<h3>Disclaimer</h3><p>${info.disclaimer}</p>`;

            // Populate Advantages
            modalAdvantages.innerHTML = "<h3>Advantages</h3>";
            info.advantages.forEach(adv => {
                modalAdvantages.innerHTML += `<li>${adv}</li>`;
            });

            modal.style.display = "flex";
        }

        // Close modal
        closeModal.addEventListener("click", () => {
            modal.style.display = "none";
        });

        // Close modal on outside click
        window.addEventListener("click", (event) => {
            if (event.target === modal) {
                modal.style.display = "none";
            }
        });
    </script>
</body>
</html>
