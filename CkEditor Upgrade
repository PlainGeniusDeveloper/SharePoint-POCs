<body>
  <h2>My Custom WYSIWYG Editor</h2>

  <!-- Toolbar -->
  <div id="toolbar">
    <button onclick="format('bold')"><b>B</b></button>
    <button onclick="format('italic')"><i>I</i></button>
    <button onclick="format('underline')"><u>U</u></button>
    <button onclick="insertLink()">ðŸ”— Link</button>
    <button onclick="insertIframe()">ðŸ“º YouTube</button>
  </div>

  <!-- Editable Area -->
  <div id="editor" contenteditable="true">
    Type something here...
  </div>

  <script>
    // Basic formatting
    function format(command) {
      document.execCommand(command, false, null);
    }

    // Insert hyperlink
    function insertLink() {
      let url = prompt("Enter URL:");
      if (url) {
        document.execCommand("createLink", false, url);
      }
    }

    // Insert YouTube iframe
    function insertIframe() {
      let url = prompt("Enter YouTube URL:");
      if (!url) return;

      let embedUrl = url;

      // Detect YouTube and convert to embed link
      const ytMatch = url.match(/(?:youtube\.com\/watch\?v=|youtu\.be\/)([a-zA-Z0-9_-]+)/);
      if (ytMatch && ytMatch[1]) {
        embedUrl = `https://www.youtube.com/embed/${ytMatch[1]}`;
      } else {
        alert("Currently only YouTube URLs are supported!");
        return;
      }

      const iframeHTML = `
        <iframe width="560" height="315"
          src="${embedUrl}"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen>
        </iframe>`;

      document.execCommand("insertHTML", false, iframeHTML);
    }
  </script>
</body>
