case "approveButton":
case "rejectButton":
    if (reviewStage === "approver") {
        console.log(`${actionType} button clicked`);

        popup.showApprovalPopup({
            onSubmit: (action, comment) => {
                if (!action) {
                    alert("Please select either 'Approve' or 'Reject' before submitting.");
                    return;
                }

                const isApprove = action === "approve";
                const statusCode = isApprove ? 0 : 1;

                console.log(`${action.charAt(0).toUpperCase() + action.slice(1)} submitted with comment:`, comment);

                handleModerationAction(statusCode, comment)
                    .then(() => {
                        loaderAPI.hideLoader();
                        alertAPI.showAlert(
                            isApprove
                                ? `Congratulations! Your content review request has been approved successfully!\nYour published content will be reflected in the IT Service Portal within the next 24 hours.`
                                : `Your content review request has been rejected successfully.`,
                            "success",
                            () => {
                                window.location.href = siteUrl; // Redirect after action
                            },
                            isApprove ? "approve" : "reject" // âœ… Extra parameter for alert type
                        );
                    });
            }
        });
    }
    break;
