.replace(/\\/g, '')                     // Remove backslashes
        .replace(/"/g, '\\"')                   // Escape double quotes
        .replace(/\n/g, '')                     // Remove newline characters
        .replace(/<p>\s*<\/p>/g, '')            // Remove empty <p> tags
        .replace(/\s\s+/g, ' ')                 // Replace multiple spaces with a single space
        .trim();  
