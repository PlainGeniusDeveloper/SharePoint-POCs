function mergeJSON(defaultJson, specificJson) {
  if (typeof defaultJson !== "object" || defaultJson === null) return specificJson;

  const result = Array.isArray(defaultJson) ? [] : {};

  const keys = new Set([
    ...Object.keys(defaultJson),
    ...(specificJson && typeof specificJson === "object" ? Object.keys(specificJson) : [])
  ]);

  keys.forEach((key) => {
    const defaultVal = defaultJson[key];
    const specificVal = specificJson?.[key];

    // Agar dono objects hai (array nahi) â†’ recursive merge
    if (
      typeof defaultVal === "object" &&
      defaultVal !== null &&
      !Array.isArray(defaultVal)
    ) {
      result[key] = mergeJSON(
        defaultVal,
        typeof specificVal === "object" && specificVal !== null ? specificVal : {}
      );
    } else {
      // primitive ya array
      if (specificVal !== undefined && specificVal !== null && specificVal !== "") {
        result[key] = specificVal;
      } else {
        result[key] = defaultVal;
      }
    }
  });

  return result;
}
