function setJsonValue(obj, path, value) {
    const keys = path.split('.'); // Split the path into keys
    let current = obj;

    for (let i = 0; i < keys.length - 1; i++) {
        if (!current[keys[i]]) {
            current[keys[i]] = {}; // Create the path if it doesn't exist
        }
        current = current[keys[i]];
    }

    current[keys[keys.length - 1]] = value; // Set the final value
}

// Example Usage:
let config = {};

// Path from config
let jsonPath = "user.details.age";
let htmlValue = "30"; // Example value from HTML element

setJsonValue(config, jsonPath, htmlValue);

console.log(config);
// Output: { user: { details: { age: "30" } } }
