<body>
  <h2>ðŸ§¹ Bulk JSON Cleaner for SharePoint Quick Edit</h2>

  <p><b>Step 1:</b> Paste your Excel JSON column data (multiple rows):</p>
  <textarea id="inputArea" placeholder="Paste multiple rows from Excel here..."></textarea>

  <button onclick="cleanRows()">Clean All Rows</button>

  <p><b>Step 2:</b> Copy this cleaned data for SharePoint:</p>
  <textarea id="outputArea" placeholder="Cleaned multi-row JSON output..."></textarea>

  <script>
    function cleanHtmlEntities(text) {
      return text
        .replace(/&quot;/g, '"')
        .replace(/&amp;/g, '&')
        .replace(/&lt;/g, '<')
        .replace(/&gt;/g, '>')
        .replace(/""/g, '"')  // Excel double-double quotes
        .trim();
    }

    function cleanRows() {
      const input = document.getElementById("inputArea").value;
      const rows = input.split(/\r?\n/);

      const cleanedRows = rows.map(row => cleanHtmlEntities(row));
      document.getElementById("outputArea").value = cleanedRows.join("\n");
    }
  </script>
