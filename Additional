function setValueByPath(obj, path, value) {
    if (!path) return; // Ensure path is valid

    const keys = path.split('.'); // Split the path into keys
    let current = obj;

    for (let i = 0; i < keys.length - 1; i++) {
        if (!current[keys[i]] || typeof current[keys[i]] !== 'object') {
            current[keys[i]] = {}; // Create an empty object if key is missing
        }
        current = current[keys[i]];
    }

    // Set the final value
    current[keys[keys.length - 1]] = value;
}

// Example Usage
let json_template_to_be_filled = {}; // Initial JSON object
let jsonPath = "tabsDetails.Support.tabContent.productArea";
let productArea = "Product Value"; // Example value

setValueByPath(json_template_to_be_filled, jsonPath, productArea);

console.log(json_template_to_be_filled);
