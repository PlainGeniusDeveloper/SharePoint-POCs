case "editor-modal-related-links":
  let related_links_desc = getEditorData("editor-modal-related-links");
  const relatedLinkExtracted = $(related_links_desc).find("a").first();
  const linkHref = relatedLinkExtracted.attr("href") || "";
  const linkDisplayText = relatedLinkExtracted.text() || "";

  // âœ… Remove domain if internal link
  const origin = window.location.origin;
  const cleanedLinkHref = linkHref.startsWith(origin)
    ? linkHref.replace(origin, '')
    : linkHref;

  // Update the DOM
  currentRow.find(".related-links-anchor").attr("href", cleanedLinkHref);
  currentRow.find(".related-links-anchor").text(linkDisplayText);
  break;
