<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editable Content Input with jQuery and Font Awesome</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        .editable-container {
            display: flex;
            align-items: center;
            border: 1px solid #ccc;
            padding: 5px;
            border-radius: 5px;
            width: fit-content;
            margin-bottom: 10px;
        }

        .content-editable {
            padding: 5px;
            border: none;
            outline: none;
            min-width: 200px;
            color: #555;
        }

        .content-editable.placeholder {
            color: #aaa;
        }

        .icon-button {
            background: none;
            border: none;
            cursor: pointer;
            font-size: 1.2em;
            color: #333;
            margin-left: 5px;
        }

        .icon-button:hover {
            color: #007bff;
        }
    </style>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>

<div class="editable-container">
    <div contenteditable="false" class="content-editable placeholder" data-placeholder="Click edit to start typing...">Click edit to start typing...</div>
    <button class="icon-button editBtn" title="Edit"><i class="fas fa-edit"></i></button>
    <button class="icon-button clearBtn" title="Clear"><i class="fas fa-times"></i></button>
</div>

<div class="editable-container">
    <div contenteditable="false" class="content-editable placeholder" data-placeholder="Enter your notes here...">Enter your notes here...</div>
    <button class="icon-button editBtn" title="Edit"><i class="fas fa-edit"></i></button>
    <button class="icon-button clearBtn" title="Clear"><i class="fas fa-times"></i></button>
</div>

<script>
    $(document).ready(function() {
        function setPlaceholder(element) {
            const placeholderText = $(element).data('placeholder');
            $(element).text(placeholderText).addClass('placeholder');
        }

        function clearPlaceholder(element) {
            $(element).text('').removeClass('placeholder');
        }

        // Toggle edit mode for the specific editable content
        $('.editBtn').on('click', function() {
            const container = $(this).closest('.editable-container');
            const editableText = container.find('.content-editable');
            const editIcon = $(this).find('i');

            if (editableText.attr('contenteditable') === "true") {
                // Exit edit mode
                editableText.attr('contenteditable', 'false');
                editIcon.removeClass('fa-check').addClass('fa-edit'); // Change icon back to edit

                // If empty, show placeholder text
                if ($.trim(editableText.text()) === "") {
                    setPlaceholder(editableText);
                }
            } else {
                // Enter edit mode
                if (editableText.hasClass('placeholder')) {
                    clearPlaceholder(editableText); // Clear placeholder text
                }
                editableText.attr('contenteditable', 'true').focus();
                editIcon.removeClass('fa-edit').addClass('fa-check'); // Change icon to indicate save mode
            }
        });

        // Clear content and set placeholder for the specific editable content
        $('.clearBtn').on('click', function() {
            const container = $(this).closest('.editable-container');
            const editableText = container.find('.content-editable');
            editableText.text('');
            setPlaceholder(editableText);
        });

        // Initialize placeholder for each editable content on page load
        $('.content-editable').each(function() {
            setPlaceholder(this);
        });
    });
</script>

</body>
</html>
