<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Features Supported</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        .features-container {
            font-family: Arial, sans-serif;
        }
        .feature-item {
            display: flex;
            align-items: center;
        }
        .feature-item .remove-button {
            margin-left: 10px;
            cursor: pointer;
            color: red;
        }
    </style>
</head>
<body>

<div class="features-container">
    <h2>Features Supported</h2>
    <p><strong>Demo Description</strong></p>
    <div id="features-list">
        <!-- Start with no default features here -->
    </div>

    <input type="text" id="feature-input" placeholder="Enter new feature">
    <button id="add-feature">Add Feature</button>
</div>

<script>
    $(document).ready(function() {
        // Add feature on button click
        $('#add-feature').click(function() {
            const featureText = $('#feature-input').val().trim();

            if (featureText !== "") {
                // Create new feature item with remove button
                const featureItem = $('<div class="feature-item">✔️ ' + featureText + ' <span class="remove-button">Remove</span></div>');
                
                // Append to the features list
                $('#features-list').append(featureItem);
                
                // Clear the input field
                $('#feature-input').val('');
            } else {
                alert("Please enter a feature");
            }
        });

        // Delegate event to handle remove button click for dynamically added elements
        $('#features-list').on('click', '.remove-button', function() {
            $(this).parent().remove();
        });
    });
</script>

</body>
</html>
