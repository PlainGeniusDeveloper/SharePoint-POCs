<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Multiple Editable Divs with Placeholder</title>
    <style>
        .editable-div {
            width: 300px;
            min-height: 30px;
            padding: 5px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
            color: #000;
            margin-bottom: 10px;
        }

        .placeholder {
            color: #aaa;
        }
    </style>
</head>
<body>

    <div id="section1" class="editable-div placeholder" contenteditable="true" data-placeholder="Enter section 1 text...">
        Enter section 1 text...
    </div>

    <div id="section2" class="editable-div placeholder" contenteditable="true" data-placeholder="Enter section 2 text...">
        Enter section 2 text...
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const editableDivs = document.querySelectorAll(".editable-div");

            editableDivs.forEach(div => {
                const placeholderText = div.getAttribute("data-placeholder");

                div.addEventListener("focus", function () {
                    if (div.innerText.trim() === placeholderText) {
                        div.innerText = "";
                        div.classList.remove("placeholder");
                    }
                });

                div.addEventListener("blur", function () {
                    div.innerText = div.innerText.trim(); // Remove whitespace
                    if (div.innerText === "") {
                        div.innerText = placeholderText;
                        div.classList.add("placeholder");
                    }
                });
            });
        });
    </script>

</body>
</html>
