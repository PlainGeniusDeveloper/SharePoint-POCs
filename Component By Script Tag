// Function to create accordion items using a script template and data binding
function createAccordionItems(items) {
    const templateId = 'accordion-item-template'; // Define the template ID

    // Use map to bind data to each accordion item template
    const accordionItemsHTML = items.map(item => {
        return getTemplate(templateId, {
            title: item.title,       // Assuming your data has a 'title' field
            description: item.description // Assuming your data has a 'description' field
        });
    }).join(''); // Join the resulting items into a single HTML string

    return accordionItemsHTML;
}


================


"Accordion": (content) => {
        // Use the createAccordionItems to generate all the accordion items' HTML
        const accordionItemsHTML = createAccordionItems(content.tabAccordionList);
        
        // Bind the accordion template and include the accordion items inside it
        return getTemplate('accordion-template', {
            titleName: content.titleName,  // Bind the accordion section title
            accordionItems: accordionItemsHTML // Insert all accordion items' HTML here
        });
    },
