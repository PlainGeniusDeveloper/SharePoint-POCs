// Function to dynamically import CKEditor 5 modules and initialize the editor
async function loadAndInitCKEditor() {
    try {
        const {
            ClassicEditor,
            Essentials,
            Paragraph,
            Bold,
            Italic,
            Font
        } = await import('ckeditor5');

        // Initialize the editor
        ClassicEditor
            .create(document.querySelector('#editor'), {
                plugins: [Essentials, Paragraph, Bold, Italic, Font],
                toolbar: [
                    'undo', 'redo', '|', 'bold', 'italic', '|',
                    'fontSize', 'fontFamily', 'fontColor', 'fontBackgroundColor'
                ]
            })
            .then(editor => {
                window.editor = editor;
            })
            .catch(error => {
                console.error(error);
            });
    } catch (error) {
        console.error("Failed to load CKEditor 5 modules:", error);
    }
}

// Call the function to load and initialize the editor
loadAndInitCKEditor();
