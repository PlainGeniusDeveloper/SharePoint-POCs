function removeEditorFromControl() {
    // Check if the CKEditor instance exists
    if (editorInstance) {
        // Destroy the CKEditor instance
        editorInstance.destroy()
            .then(() => {
                console.log("Editor instance successfully destroyed.");
                editorInstance = null;  // Reset the editor instance reference
            })
            .catch(error => {
                console.error("Error while destroying CKEditor instance:", error);
            });
    } else {
        console.log("No CKEditor instance found to destroy.");
    }
}
