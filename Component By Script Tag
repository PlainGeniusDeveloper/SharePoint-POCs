<div id="summary-content"></div>

<!-- Define templates in <script> tags -->
<script type="text/template" id="template-summary">
    <div class="summary-item">
        <h2 class="summary-title">{{title}}</h2>
        <p class="summary-description">{{description}}</p>
        <div class="summary-extra">{{extra}}</div>
    </div>
</script>
==============================================================


$(document).ready(function() {
    // Function to bind data to the template
    const bindTemplate = (templateHtml, data) => {
        let output = templateHtml;
        for (const key in data) {
            const placeholder = `{{${key}}}`;
            output = output.replace(new RegExp(placeholder, 'g'), data[key]);
        }
        return output;
    };

    // Function to render summaries (iterate over only tabSummary)
    const renderSummaries = (jsonData) => {
        const $content = $('#summary-content');
        const templateHtml = $('#template-summary').html(); // Get the summary template
        $content.empty(); // Clear existing content

        // Check if tabSummary exists in JSON data
        if (jsonData.tabSummary && Array.isArray(jsonData.tabSummary)) {
            // Iterate over the tabSummary array only
            jsonData.tabSummary.forEach(item => {
                const renderedHtml = bindTemplate(templateHtml, item);
                $content.append(renderedHtml); // Append each rendered template to the content div
            });
        } else {
            console.log('No tabSummary data found.');
        }
    };

    // Call the render function with your JSON data
    renderSummaries(jsonData);
});

====================================================

