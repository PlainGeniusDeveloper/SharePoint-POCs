// Example JSON response containing an <img> tag in the HTML
const jsonResponse = {
    htmlContent: "<div><img src='https://example.com/image.jpg' alt='Sample Image'></div>"
};

// Extract the HTML content from the JSON response
const htmlContent = jsonResponse.htmlContent;

// Create a temporary DOM element (div) to parse the HTML string
const tempDiv = document.createElement('div');
tempDiv.innerHTML = htmlContent;

// Find the <img> tag inside the HTML content
const imgTag = tempDiv.querySelector('img');

// If an <img> tag is found, get the src attribute
if (imgTag) {
    const imgSrc = imgTag.getAttribute('src');
    console.log('Image Source:', imgSrc);
} else {
    console.log('No image found in the HTML.');
}
