<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>CKEditor 5 Iframe Example</title>
  <script src="https://cdn.ckeditor.com/ckeditor5/41.2.1/classic/ckeditor.js"></script>
</head>
<body>

  <h2>CKEditor 5 with iframe</h2>
  <div id="editor"></div>

  <script>
    ClassicEditor
      .create(document.querySelector('#editor'), {
        extraPlugins: [],
        toolbar: [ 'sourceEditing', 'undo', 'redo', 'bold', 'italic' ],
        // IMPORTANT: Enable HTML support
        htmlSupport: {
          allow: [
            {
              name: 'iframe',
              attributes: true,
              classes: true,
              styles: true
            }
          ]
        },
        // Needed to paste or type raw HTML
        htmlEmbed: {
          showPreviews: true
        }
      })
      .then(editor => {
        console.log('Editor ready');
      })
      .catch(error => {
        console.error(error);
      });
  </script>

</body>
</html>
