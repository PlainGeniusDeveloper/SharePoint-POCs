$('#save-modal-button').on('click', function () {
    const parent = $('.slider-card.active'); // Get the active slider

    // Iterate through each CKEditor field in the modal
    $('.support-description').each(function () {
        const modalField = $(this); // Current modal field
        const fieldClass = modalField.attr('data-field'); // Get the data-field attribute

        // Retrieve the CKEditor instance content
        const editorInstance = CKEDITOR.instances[modalField.attr('id')]; // Use the modal field's ID
        const content = editorInstance ? editorInstance.getData() : modalField.val();

        // Update the slider field with the content
        parent.find(`.slider-description[data-field="${fieldClass}"]`).html(content);
    });

    // Close the modal
    $('#myModal').modal('hide');
});
